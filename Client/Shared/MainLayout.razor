@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme"/>
<MudDialogProvider />
<MudSnackbarProvider />

    <MudLayout>
    <MudAppBar Fixed="false" Dense="true">
             <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
                 <MudText>
                     Divi
                 </MudText>
                 <MudImage src="images/heart.png" ObjectFit="Object.ScaleDown" Height="50px" />
                 <MudText>
                     Yogi
                 </MudText>
        <MudSpacer />
        <MudToggleIconButton Edge="Edge.End" @bind-Toggled="@_isDarkMode" Icon="@Icons.Filled.LightMode" Color="@Color.Error" Title="Switch to Light"
                             ToggledIcon="@Icons.Filled.DarkMode" ToggledColor="@Color.Success" ToggledTitle="Switch to Dark" />
    </MudAppBar>
<MudDrawer @bind-Open="@_drawerOpen">
        <MyNavMenu/>
    </MudDrawer>

    <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.Large">
        @Body
    </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme _theme = new();
    private bool _isDarkMode;

    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
